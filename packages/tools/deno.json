{
  "name": "@dohzya/tools",
  "version": "0.8.1",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts",
    "./markdown-surgeon": "./markdown-surgeon/mod.ts",
    "./markdown-surgeon/parser": "./markdown-surgeon/parser.ts",
    "./markdown-surgeon/hash": "./markdown-surgeon/hash.ts",
    "./markdown-surgeon/yaml": "./markdown-surgeon/yaml.ts",
    "./markdown-surgeon/types": "./markdown-surgeon/types.ts",
    "./markdown-surgeon/cli": "./markdown-surgeon/cli.ts",
    "./worklog": "./worklog/mod.ts",
    "./worklog/types": "./worklog/types.ts",
    "./worklog/cli": "./worklog/cli.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "@zod/zod": "jsr:@zod/zod@^4.3.6",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/command/completions": "jsr:@cliffy/command@^1.0.0-rc.8/completions"
  },
  "tasks": {
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "test": "env -u WORKLOG_TASK_ID deno test --allow-read --allow-write --allow-env --allow-run --reporter=dot",
    "validate": "deno task fmt:check && deno task lint && deno task check && deno task test"
  },
  "fmt": {
    "proseWrap": "never"
  },
  "lint": {
    "plugins": [
      "./lint-plugin.ts"
    ],
    "exclude": [
      "explicit-cast.ts",
      "lint-plugin.ts"
    ]
  }
}
